{
	"extends": "@guardian/tsconfig",
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"lib": ["ESNext", "DOM"],
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true
	}
}
